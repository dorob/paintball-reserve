<% if (loggedIn) { %>
  <% include logged_in_header %>
<% } else { %>
  <% include logged_out_header %>
<% } %>

    <main role="main container">
        <div class="row">
            <div class="col">
            </div>
            <div class="col-4 mt-4">
                <div class="jumbotron jumbotron-lowpadding">
                <% if (create) { %>
                <form method="post" action="/reserve/add">
                <% } else { %>
                <form method="post" action="/reserve/mod/<%= reservationId %>">
                <% } %>
                    <div class="text-center">
                        <h4>Pálya kiválasztása</h4>
                    </div>
                    <div class="d-flex justify-content-center btn-group btn-group-toggle mt-5" data-toggle="buttons">
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="option1" autocomplete="off" checked> Pálya #1
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="option2" autocomplete="off"> Pálya #2
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="option3" autocomplete="off"> Pálya #3
                        </label>
                    </div>
                </div>
                <div class="jumbotron jumbotron-lowpadding">
                    <div class="text-center">
                        <h4>Időpont választása</h4>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-4 md-5">
                        <button type="button" class="btn btn-warning btn-custom-date"><%= date %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-5 md-2">
                        <button type="button" class="btn btn-light disabled">09:00 - 10:00</button>
                        <button type="button" class="btn btn-outline-success btn-custom-width"><%= slots[0] %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-2 md-2">
                        <button type="button" class="btn btn-light disabled">10:00 - 11:00</button>
                        <button type="button" class="btn btn-outline-success btn-custom-width"><%= slots[1] %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-2 md-2">
                        <button type="button" class="btn btn-light disabled">11:00 - 12:00</button>
                        <button type="button" class="btn btn-outline-success btn-custom-width"><%= slots[2] %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-2 md-2">
                        <button type="button" class="btn btn-light disabled">12:00 - 13:00</button>
                        <button type="button" class="btn btn-danger disabled btn-custom-width"><%= slots[3] %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-2 md-2">
                        <button type="button" class="btn btn-light disabled">13:00 - 14:00</button>
                        <button type="button" class="btn btn-danger disabled btn-custom-width"><%= slots[4] %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-2 md-2">
                        <button type="button" class="btn btn-light disabled">15:00 - 16:00</button>
                        <button type="button" class="btn btn-danger disabled btn-custom-width"><%= slots[5] %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-2 md-2">
                        <button type="button" class="btn btn-light disabled">16:00 - 17:00</button>
                        <button type="button" class="btn btn-primary btn-custom-width"><%= slots[6] %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-2 md-2">
                        <button type="button" class="btn btn-light disabled">17:00 - 18:00</button>
                        <button type="button" class="btn btn-primary btn-custom-width"><%= slots[7] %></button>
                    </div>
                    <div class="d-flex flex-row justify-content-around mt-2 md-2">
                        <button type="button" class="btn btn-light disabled">18:00 - 19:00</button>
                        <button type="button" class="btn btn-primary btn-custom-width"><%= slots[8] %></button>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-around my-4">
                    <button class="btn btn-success" type="submit">Foglalás leadása</button>
                </div>
                </form>
            </div>
            <div class="col">
            </div>
        </div>
    </main>
<% include footer %>